<?xml version="1.0"?>
<strings>
    <!-- ISOD System -->
    <ISOD>
        <!-- Notifications -->
        <notifications>
            <string key="hello_isod_notification_title">ISOD account successfully linked!</string>
            <string key="hello_isod_notification_body">You'll be notified with ISOD news</string>
            <string key="new_isod_notification_title">New ISOD notification</string>
        </notifications>

        <!-- Information -->
        <info>
            <string key="isod_account_successfully_unlinked_info">ISOD account successfully unlinked</string>
            <string key="no_isod_account_linked_info">User has no linked ISOD account</string>
        </info>

        <!-- Errors -->
        <errors>
            <string key="isod_server_error">ISOD server error</string>
            <string key="invalid_isod_auth_data_error">Invalid username or API key</string>
            <string key="user_has_no_usos_id_in_isod">User has no USOS id in ISOD</string>
        </errors>
    </ISOD>

    <!-- USOS System -->
    <USOS>
        <!-- Notifications -->
        <notifications>
            <string key="hello_usos_notification_title">USOS account successfully linked!</string>
            <string key="hello_usos_notification_body">You'll be notified with USOS news</string>
            <string key="new_usos_notification_title">New USOS notification</string>
        </notifications>

        <!-- Information -->
        <info>
            <string key="usos_account_successfully_unlinked_info">USOS account successfully unlinked</string>
            <string key="no_usos_account_linked_info">User has no linked USOS account</string>
        </info>

        <!-- Errors -->
        <errors>
            <string key="usos_server_error">USOS server error</string>
            <string key="usos_session_expired_error">USOS session expired</string>
            <string key="invalid_usos_auth_data_error">Given pin invalid or expired</string>
        </errors>
    </USOS>

    <!-- Global Messages -->
    <Global>
        <!-- Information -->
        <info>
            <string key="all_user_data_successfully_removed_info">User's data successfully removed</string>
            <string key="user_successfully_logged_out_from_all_other_devices">User successfully logged out from all other devices</string>
            <string key="user_not_found_info">User not found</string>
        </info>

        <!-- Errors -->
        <errors>
            <string key="internal_server_error">Internal server error</string>
            <string key="too_many_requests_error">Too many requests</string>
            <string key="invalid_input_data_error">Invalid data given</string>
            <string key="invalid_fcm_token_error">Invalid FCM token given</string>
            <string key="invalid_data_received_form_external_service">Invalid data received from external service</string>
        </errors>
    </Global>
</strings>
